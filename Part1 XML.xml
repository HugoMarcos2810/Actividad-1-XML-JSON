                    <categoria>
                        <principal>Electrónica</principal>
                        <subcategoria>Smartphones</subcategoria>
                    </categoria>
                </informacion>
                <disponibilidad estado="en_stock">En stock</disponibilidad>
            </detalles>
            <imagen>https://m.media-amazon.com/images/I/41OUNhml02L._AC_UF894,1000_QL80_.jpg</imagen>
        </producto>

